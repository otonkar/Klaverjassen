# Default server configuration
#
server {

	#root /var/www/fronts/test1/dist;
        #root /apps/frontend/front1/dist;

	server_name klaverjasfun.nl;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		proxy_pass http://localhost:8081;
		#try_files $uri $uri/ /index.html =404;
	}

	location /nginx_status {
		# Turn on stats
		stub_status on;
		access_log   off;
		# only allow access from 1145.53.40.4 #
		allow 145.53.40.4;
		deny all;
	}

	location /api {
		rewrite ^/api(.*)$ $1 break;
		proxy_pass http://localhost:6000;
	}

        location /ws/game {
                proxy_pass http://localhost:6000;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";

        }


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/klaverjasfun.nl/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/klaverjasfun.nl/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    listen 5000 ssl;
    listen [::]:5000 ssl;
    #listen       5000;
    server_name  klaverjasfun.nl;

    location / {
        #proxy_pass http://127.0.0.1:6000;
        proxy_pass http://localhost:6000;
    }

	location /ws/game {
            proxy_pass http://localhost:6000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
        }

    ssl_certificate /etc/letsencrypt/live/klaverjasfun.nl/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/klaverjasfun.nl/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}


server {
    if ($host = klaverjasfun.nl) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80 default_server;
	listen [::]:80 default_server;

	server_name klaverjasfun.nl;
    return 404; # managed by Certbot


}
